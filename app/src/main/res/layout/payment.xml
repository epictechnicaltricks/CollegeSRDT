<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="0dp"
		android:orientation="vertical">


		<LinearLayout
			android:id="@+id/tool"
			android:layout_width="match_parent"
			android:layout_height="57dp"
			android:padding="10dp"
			android:background="#0091EA"
			android:gravity="left|center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:onClick="close"
				android:id="@+id/back"
				android:layout_width="25dp"
				android:layout_height="22dp"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="10dp"
				android:src="@drawable/back2"
				android:scaleType="centerInside"/>
			<TextView
				android:textStyle="bold"
				android:id="@+id/textview1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dp"
				android:gravity="left|center_vertical"
				android:text="Apply Exam"
				android:textSize="17sp"
				android:textColor="#FFFFFF"
				android:layout_weight="1"/>
		</LinearLayout>



		<LinearLayout
			android:id="@+id/relative"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#FFFFFF"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/bottom"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/imageview_aff"
					android:layout_width="match_parent"
					android:layout_height="220dp"
					android:background="#757575"
					android:src="@drawable/default_image"
					android:scaleType="centerCrop"/>
			</LinearLayout>
			<androidx.cardview.widget.CardView
				android:id="@+id/top_cardview1"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:translationY="-30.0dp"
				app:cardElevation="0dp"
				app:cardCornerRadius="30dp">
				<ScrollView
					android:id="@+id/vscroll1"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:scrollbars="none">
					<LinearLayout
						android:id="@+id/bg"
						android:padding="15dp"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">




						<LinearLayout
							android:id="@+id/linearss1"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="15dp"
							android:gravity="left"
							android:orientation="vertical">


							<TextView
								android:layout_marginBottom="5dp"
								android:textColor="#3697EC"

								android:textStyle="bold"
								android:textSize="20sp"
								android:text="Fillup exam form"
								android:layout_width="match_parent"
								android:layout_height="wrap_content">


							</TextView>
							<LinearLayout

								android:paddingBottom="12dp"
								android:layout_width="match_parent"
								android:layout_height="2dp"
								android:padding="8dp"
								android:background="#3697EC"
								android:orientation="horizontal"/>


							<TextView

								android:layout_marginStart="7dp"
								android:id="@+id/textview3"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="20dp"
								android:text="Student name"
								android:textSize="14sp"
								android:textStyle="bold"
								android:textColor="#575656"/>


							<EditText
								android:enabled="false"
								android:id="@+id/stu_name"
								android:paddingTop="12dp"


								android:layout_marginTop="7dp"
								android:background="@drawable/shape"
								android:textSize="14sp"
								android:layout_width="match_parent"
								android:layout_height="40dp"
								android:padding="8dp"

								android:textColor="#7E7E7E"

								android:textColorHint="#607D8B"/>

						
							<TextView
								android:layout_marginStart="7dp"
								android:textStyle="bold"
								android:id="@+id/textview1012"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="10dp"
								android:text="Department"
								android:inputType="numberSigned"
								android:textSize="14sp"
								android:textColor="#575656"/>

							<EditText
								android:enabled="false"
								android:paddingTop="12dp"
								android:inputType="numberSigned"
								android:layout_marginTop="7dp"
								android:background="@drawable/shape"
								android:textSize="14sp"
								android:id="@+id/dept_name"
								android:layout_width="match_parent"
								android:layout_height="40dp"
								android:padding="8dp"

								android:textColor="#7E7E7E"

								android:textColorHint="#607D8B"/>



							<TextView
								android:layout_marginStart="7dp"
								android:textStyle="bold"
								android:id="@+id/textview1560"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="10dp"
								android:text="Class"
								android:inputType="numberSigned"
								android:textSize="14sp"
								android:textColor="#575656"/>

							<EditText
								android:enabled="false"
								android:paddingTop="12dp"
								android:inputType="numberSigned"
								android:layout_marginTop="7dp"
								android:background="@drawable/shape"
								android:textSize="14sp"
android:id="@+id/class_name"
								android:layout_width="match_parent"
								android:layout_height="40dp"
								android:padding="8dp"

								android:textColor="#7E7E7E"

								android:textColorHint="#607D8B"/>


							<TextView
								android:layout_marginStart="7dp"
								android:textStyle="bold"
								android:id="@+id/textview1fds0"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="10dp"
								android:text="Exam"
								android:inputType="numberSigned"
								android:textSize="14sp"
								android:textColor="#575656"/>

							<EditText
								android:enabled="false"
								android:id="@+id/exam_name"
								android:paddingTop="12dp"
								android:inputType="numberSigned"
								android:layout_marginTop="7dp"
								android:background="@drawable/shape"
								android:textSize="14sp"

								android:layout_width="match_parent"
								android:layout_height="40dp"
								android:padding="8dp"

								android:textColor="#7E7E7E"

								android:textColorHint="#607D8B"/>


							<TextView
								android:layout_marginStart="7dp"
								android:textStyle="bold"

								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="10dp"
								android:text="Semester"
								android:inputType="numberSigned"
								android:textSize="14sp"
								android:textColor="#575656"/>

							<EditText
								android:enabled="false"
								android:id="@+id/semister_name"
								android:paddingTop="12dp"
								android:inputType="numberSigned"
								android:layout_marginTop="7dp"
								android:background="@drawable/shape"
								android:textSize="14sp"

								android:layout_width="match_parent"
								android:layout_height="40dp"
								android:padding="8dp"

								android:textColor="#7E7E7E"

								android:textColorHint="#607D8B"/>


							<TextView
								android:layout_marginStart="7dp"
								android:textStyle="bold"
								android:id="@+id/textview10"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="10dp"
								android:text="Term"
								android:inputType="numberSigned"
								android:textSize="14sp"
								android:textColor="#575656"/>

							<EditText
								android:enabled="false"
								android:paddingTop="12dp"
								android:inputType="numberSigned"
								android:layout_marginTop="7dp"
								android:background="@drawable/shape"
								android:textSize="14sp"
								android:id="@+id/term"
								android:layout_width="match_parent"
								android:layout_height="40dp"
								android:padding="8dp"

								android:textColor="#7E7E7E"

								android:textColorHint="#607D8B"/>


							<TextView
								android:layout_marginStart="7dp"
								android:textStyle="bold"
android:id="@+id/date"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="10dp"
								android:text="Date : 09-01-2023"
								android:inputType="numberSigned"
								android:textSize="17sp"
								android:textColor="#575656"/>






							<TextView
								android:layout_marginBottom="10dp"
								android:layout_marginStart="7dp"
								android:textStyle="bold"
								android:id="@+id/fees"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="10dp"
								android:text="Fees : 1.00"
								android:textSize="18sp"
								android:textColor="#047E04"/>


							<LinearLayout

								android:layout_marginBottom="10dp"
								android:id="@+id/linear7"
								android:layout_width="match_parent"
								android:layout_height="2dp"
								android:background="#EEEEEE"
								android:orientation="horizontal"
								android:padding="8dp" >



							</LinearLayout>



							<LinearLayout
								android:gravity="right"
								android:orientation="horizontal"
								android:layout_width="match_parent"
								android:layout_height="wrap_content">

								<Button

									android:id="@+id/pay"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginTop="15dp"
									android:padding="12dp"
									app:backgroundTint="#1C89E8"
									android:layout_gravity="center_horizontal|center_vertical"
									android:text="SUBMIT FORM"
									android:textSize="12sp"
									android:textColor="#FFFFFF"
									android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
									style="@style/Widget.MaterialComponents.Button"/>


								<Button
									android:layout_marginLeft="10dp"
									android:id="@+id/close"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginTop="15dp"
									android:padding="12dp"
									app:backgroundTint="#FB4545"
									android:layout_gravity="center_horizontal|center_vertical"
									android:text="CLOSE"
									android:textSize="12sp"
									android:textColor="#FFFFFF"
									android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
									style="@style/Widget.MaterialComponents.Button"/>


							</LinearLayout>




						</LinearLayout>











					</LinearLayout>



				</ScrollView>
			</androidx.cardview.widget.CardView>



		</LinearLayout>





	</LinearLayout>
</LinearLayout>
