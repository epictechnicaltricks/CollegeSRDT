<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"

	android:orientation="vertical">
	<LinearLayout

		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/image_layout"
			android:layout_width="match_parent"
			android:layout_height="170dp"
			android:padding="8dp"
			android:background="#0091EA"
			android:gravity="bottom"
			android:orientation="vertical">

<androidx.cardview.widget.CardView
	android:layout_marginLeft="5dp"
	app:cardCornerRadius="100dp"
	app:cardElevation="2dp"
	app:cardBackgroundColor="#fff"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">
	<ImageView

		android:id="@+id/profile_image"
		android:layout_width="60dp"
		android:background="#DCE3E4"
		android:scaleType="centerInside"
		android:src="@drawable/person"
		android:layout_height="60dp">

	</ImageView>

</androidx.cardview.widget.CardView>


			<TextView
				android:id="@+id/name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="8dp"
				android:paddingTop="8dp"
				android:paddingRight="8dp"
				android:text="Hello, User !"
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="#FFFFFF"/>
			<TextView
				android:id="@+id/id"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="8dp"
				android:paddingTop="3dp"
				android:paddingRight="8dp"
				android:paddingBottom="8dp"
				android:text="Please login to get more features.. "
				android:textSize="12sp"
				android:textColor="#E0E0E0"/>
		</LinearLayout>
		<ScrollView
			android:id="@+id/vscroll1"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<LinearLayout
				android:id="@+id/bottom_bg"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:orientation="vertical">
				<LinearLayout

					android:id="@+id/profile"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/imageview1"
						android:layout_width="25dp"
						android:layout_height="wrap_content"
						android:src="@drawable/user"
						android:scaleType="centerInside"/>
					<TextView
						android:id="@+id/textview2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="My Profile "
						android:textSize="14sp"
						android:textColor="#000000"/>
				</LinearLayout>
				<LinearLayout
					android:visibility="gone"
					android:id="@+id/exam"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/imageview2"
						android:layout_width="25dp"
						android:layout_height="30dp"
						android:src="@drawable/order"
						android:scaleType="centerInside"/>
					<TextView
						android:id="@+id/textview3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Examination"
						android:textSize="14sp"
						android:textColor="#000000"/>
				</LinearLayout>
				<LinearLayout
					android:visibility="gone"
					android:id="@+id/linear6"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/imageview3"
						android:layout_width="25dp"
						android:layout_height="25dp"
						android:src="@drawable/logout_3"
						android:scaleType="centerInside"/>
					<TextView
						android:id="@+id/textview4"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Events "
						android:textSize="14sp"
						android:textColor="#000000"/>
				</LinearLayout>
				<LinearLayout
					android:visibility="gone"
					android:id="@+id/gallery"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/imageview4"
						android:layout_width="25dp"
						android:layout_height="30dp"
						android:src="@drawable/pyramids"
						android:scaleType="centerInside"/>
					<TextView
						android:id="@+id/textview5"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Gallery"
						android:textSize="14sp"
						android:textColor="#000000"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/logout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/imageview5"
						android:layout_width="25dp"
						android:layout_height="30dp"
						android:src="@drawable/logout_1"
						android:scaleType="centerInside"/>
					<TextView
						android:id="@+id/textview6"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Logout "
						android:textSize="14sp"
						android:textColor="#000000"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/login"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/imageview6"
						android:layout_width="25dp"
						android:layout_height="30dp"
						android:src="@drawable/login_user_ic"
						android:scaleType="centerInside"/>
					<TextView
						android:id="@+id/textview7"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Login now "
						android:textSize="14sp"
						android:textColor="#000000"/>
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</LinearLayout>
